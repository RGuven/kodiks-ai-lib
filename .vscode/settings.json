{
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "black-formatter.args": [
        "--line-length",
        "120",
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        },
    },
    "flake8.args": [
        "--max-line-length",
        "120",
        "--extend-ignore",
        "E203"
    ],
}